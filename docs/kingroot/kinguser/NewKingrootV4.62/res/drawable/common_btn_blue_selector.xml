<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:drawable="@drawable/common_btn_blue_normal_shape">
        <shape>
            <stroke android:width="0.5dip" android:color="@color/general_desc_text_color" />
            <corners android:radius="15.0dip" />
            <solid android:color="@color/btn_default_blue_color" />
        </shape>
    </item>
    <item android:state_pressed="true" android:drawable="@drawable/common_btn_blue_pressed_shape">
        <shape>
            <stroke android:width="0.5dip" android:color="@color/general_desc_text_color" />
            <corners android:radius="15.0dip" />
            <solid android:color="@color/btn_pressed_blue_color" />
        </shape>
    </item>
    <item android:state_window_focused="true" android:drawable="@drawable/common_btn_blue_normal_shape">
        <shape>
            <stroke android:width="0.5dip" android:color="@color/general_desc_text_color" />
            <corners android:radius="15.0dip" />
            <solid android:color="@color/btn_pressed_blue_color" />
        </shape>
    </item>
</selector>